<div class="site">
<%= form_tag do %>

  <h5 class="login_helper_text">Welcome to SSID</h5>
  <fieldset>
    <div class="form-floating">
      <%= text_field_tag :name, params[:name], placeholder: 'Name', :class => "form-control" %>
      <%= label_tag 'name' %>
    </div>
    <div class="form-floating mb-3">
      <%= password_field_tag :password, params[:password], placeholder: 'Password', :class => "form-control" %>
      <%= label_tag 'password' %>

    </div>
    <span>
      <%= submit_tag "Login", :class => "site_login" %>
    </span>
    <span>
      <%= link_to 'Forgot password?', forget_password_url %>
    </span>
  </fieldset>
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <p class="site_copyright">&copy; <%= ApplicationHelper::COPYRIGHT_DATE_RANGE %> <%= ApplicationHelper::COPYRIGHT_HOLDER %></p>
<% end %>
</div>
