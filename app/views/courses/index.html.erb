<header class="course_header">
  <h2>Courses</h2>
  <% if @user.is_admin %>
    <%= link_to image_tag("plus-circle.svg", size: "28", alt: "New Course"), new_course_url, {'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 'title' => 'New Course'} %>
  <% end %>  
</header>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th class="code_col">Code</th>
      <th class="name_col">Name</th>
      <th class="year_sem_col">Academic Year (Semester)</th>
      <th class="role_col">Your Role</th>
      <% unless @user.is_admin %>
        <th class="assignments_col">Assignments</th>
      <% end %>
      <th class="action_col">View</th>
      <% if @user.is_admin %>
        <th class="edit_col">Actions</th>
      <% end %>      
    </tr>
  </thead>
  <tbody>
<% if @courses.empty? %>
  <tr>
    <td colspan="7">No courses</td>
  </tr>
<% else %>
  <% @courses.each { |course| %>
  <tr>
    <td><%= course.code %></td>
    <td><%= course.name %></td>
    <td><%= course.academic_year %> Semester <%= course.semester %></td>
    <td><%= course.role_string_for_user(@user) %></td>
    <% unless @user.is_admin %>
      <td><%= course.assignments.size %></td>
    <% end %>
    <td>
      <%= link_to image_tag("assignment_black_24dp.svg", alt: "Assignments"), course_assignments_url(course), { :class => 'tooltips', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 'title' => 'Assignments' } %>
      <%= link_to image_tag("people_black_24dp.svg", alt: "Users"), course_users_url(course), {'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 'title' => 'Users'} %>
      <%= link_to image_tag("show_chart_black_24dp.svg", alt: "Visuals"), course_visualize_url(course), {'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 'title' => 'Visuals'} %>
    </td>
    <% if @user.is_admin %>   
      <td>
        <div class="dropdown">
          <a data-toggle="dropdown" id="courseDropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            <%= image_tag("more_vert_black_24dp.svg", alt: "Course Menu Dropdown")%>
          </a>
          <ul class="dropdown-menu" aria-labelledby="courseDropdownMenuLink"> 
            <li><%= link_to "Edit", edit_course_url(course), :class => 'dropdown-item' %></li>
            <li>
              <%= button_tag 'Delete', class: "dropdown-item", data: { 'bs-toggle' => "modal", 'bs-target' => "#deleteCourseModal", 'bs-url' => "#{course_url(course)}" } %>
            </li>
          </ul> 
        </div>

      </td>
    <% end %>

  </tr>
  <% } %>
<% end %>
  </tbody>
</table>

<div class="modal fade" id="deleteCourseModal" tabindex="-1" role="dialog" aria-hidden="true">
  <% @modal = SiteModal.new("Delete Module?", "This module will be permanently deleted and cannot be recovered. Are you sure?") %>
  <%= render partial: "site/modal", locals: { modal: @modal }%>
</div>

<script>
  $('.dropdown-item').click((event) => {
    if ($(event.target).is('[data-bs-toggle=modal]')) {
      var modal = $(event.target);
      var url = $(modal).data('bs-url');
      $('.modal-footer > .button_to').attr('action', url);
    }

  })
</script>