body.visualize {
  position: relative;
  
  span.red {
    color: red;
  }

  #visualize_menu {
    position: absolute;
    width: 210px;

    ul {
      margin: 15px 0 0;
      padding: 0;
      list-style: none;

      li {
        margin-bottom: 2px;
        background-color: rgb(252, 228, 77);
        color: rgb(255, 108, 0);

        span {
          padding: 0 5px;
        }

        a {
          color: rgb(255, 255, 255);
          padding: 0 5px;
          background-color: rgb(255, 108, 0);
          width: 200px;
          display: block;
          text-decoration: none;

          &:hover {
            color: rgb(255, 108, 0);
            background-color: rgb(252, 228, 77);
          }
        }
      }
    }
  }

  #visualize_content {
    margin-left: 240px;

    div.cluster {
      border: 1px solid #000;
      margin-bottom: 20px;
      position: relative;
      height: 600px;

      h3 {
        margin: 10px;
      }

      div.legend {
        border: 1px solid #000;
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgb(255, 255, 255);

        h3 {
          text-align: center;
          margin: 3px;
        }

        div {
          margin: 0 5px;

          span {
            vertical-align: middle;
            display: inline-block;
            width: 100px;
          }
        }
        
        <% SubmissionClustersHelper::LEGEND_SIMILARITY_VALUES.each { |val| %>
          div.legend_<%= val %> span { 
            height: <%= SubmissionClustersHelper::LEGEND_WEIGHTS_FOR_SIMILARITY_VALUES[val]%>px;
            background-color: <%= SubmissionClustersHelper::LEGEND_COLORS_FOR_SIMILARITY_VALUES[val]%>;
          }
        <% } %>
      }

      div.canvas_wrapper {
        position: absolute;
        top: 40px;
        left: 50%;
        margin-left: -350px;
        width: 700px;
        height: 540px;

        div.node a {
          &, &:hover, &:visited {
            font-weight: bold;
            background-color: rgb(255, 255, 255);
            margin-right: 20px;
          }
          &:hover, &.is_plagiarism:hover {
            color: rgb(255, 108, 0);
          }

          &.is_plagiarism {
            color: rgb(255, 0, 0);
          }
        }
      }
    }
  }

  #options {
    margin-bottom: 20px;

    ol {
      padding-left: 20px;

      li {
        margin-bottom: 15px;
      }
    }

    select.submissions {
      height: 100px;
      vertical-align: top;
    }

    span {
      font-size: 11px;
      font-style: italic;
    }

    hr {
      margin: 15px 0;
    }

    table {
      border-spacing: 0;
      border-collapse: collapse;
      width: 100%;
      margin-top: 15px;
      margin-bottom: 15px;

      th {
        border: 1px solid rgb(0, 0, 0);
        background-color: rgb(231, 134, 13);
        color: rgb(255, 255, 255);
        font-weight: bold;
        text-transform: uppercase;
        padding: 3px 10px;
        text-align: left;
      }

      th.num_of_clusters_col, th.cut_off_criterion_col {
        width: 90px;
      }
      
      td {
        border: 1px dotted #bbb;
        padding: 3px 10px;
        cursor: default;
      }
    }
  }
}

body.visualize_similarity_cluster_table {
  #clusters {
    overflow: auto;
  }

  table.ranking {
    margin: 15px 20px 15px 0;
    border-spacing: 0;
    border-collapse: collapse;
    width: 100%;

    th {
      border: 1px solid rgb(0, 0, 0);
      background-color: rgb(231, 134, 13);
      color: rgb(255, 255, 255);
      font-weight: bold;
      text-transform: uppercase;
      padding: 3px 10px;
      text-align: left;
    }

    th.rank_col {
      width: 40px;
    }

    td.rank_col {
      text-align: center;
    }

    td.rank_check_box_cell {
      width: 15px;
    }

    th.num_assignments_col {
      width: 100px;
    }

    th.num_clusters_col {
      width: 100px;
    }

    tr.highlight td {
      background-color: yellow;
    }

    td {
      border: 1px dotted #bbb;
      padding: 3px 10px;

      a {
        &, &:hover, &:visited {
          background-color: rgb(255, 255, 255);
        }
        &:hover {
          color: rgb(255, 108, 0);
        }
      }
    }
  }

  table.cluster {
    float: left;
    margin: 0 20px 15px 0;
    border-spacing: 0;
    border-collapse: collapse;

    th {
      border: 1px solid rgb(0, 0, 0);
      background-color: rgb(231, 134, 13);
      color: rgb(255, 255, 255);
      font-weight: bold;
      text-transform: uppercase;
      padding: 3px 10px;
      text-align: center;
    }

    td {
      border: 1px dotted #bbb;
      padding: 3px 10px;

      a {
        &, &:hover, &:visited {
        }
        &:hover, &.is_plagiarism:hover {
          color: rgb(255, 108, 0);
        }

        &.is_plagiarism {
          color: rgb(255, 0, 0);
        }
      }

      &.hide_link_cell {
        font-size: 11px;
        text-align: center;
      }

      &.hide_link_cell:before {
        content: "[ "
      }

      &.hide_link_cell:after {
        content: " ]"
      }

      &.check_box_cell {
        width: 15px;
      }
    }

    tr.highlight td {
      background-color: yellow;
    }
  }
}

body.visualize_top_similar_submissions {
  #num_most_similar_submissions {
    width: 30px;
  }

  table.top_similar_submissions {
    border-spacing: 0;
    border-collapse: collapse;
    width: 100%;
    margin-top: 15px;
    margin-bottom: 15px;

    th {
      border: 1px solid rgb(0, 0, 0);
      background-color: rgb(231, 134, 13);
      color: rgb(255, 255, 255);
      font-weight: bold;
      text-transform: uppercase;
      padding: 3px 10px;
      text-align: left;
    }

    th.assignment_col {
      width: 90px;
    }

    td {
      border: 1px dotted #bbb;
      padding: 3px 10px;

      a {
        &, &:hover, &:visited {
          margin-right: 20px;
        }
        &:hover, &.is_plagiarism:hover {
          color: rgb(255, 108, 0);
        }
        &.is_plagiarism {
          color: rgb(255, 0, 0);
        }
      }

      a.last {
          margin-right: 0;
      }
    }

    td.assignment_cell {
      text-align: center;
    }

    tr.highlight td.not_assignment_cell {
      background-color: yellow;
    }

    td.check_box_cell {
      width: 15px;
    }

    td.student_id_cell {
      width: 100px;
    }

    td.submission_similarity {
    }

    span.similarity_bar {
      display: inline-block;
      vertical-align: middle;
    }

    span.similarity_value {
      padding-left: 5px;
    }

    <% SubmissionClustersHelper::LEGEND_SIMILARITY_VALUES.each { |val| %>
      span.legend_<%= val %> { 
        background-color: <%= SubmissionClustersHelper::LEGEND_COLORS_FOR_SIMILARITY_VALUES[val]%>;
      }
    <% } %>
  }
}
